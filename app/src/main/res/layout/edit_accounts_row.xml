<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/account_name"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="8pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/account_type"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/remove_account_btn"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/account_value"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_delete_black_24dp"
        android:drawableStart="@drawable/ic_delete_black_24dp"/>
    <Button
        android:id="@+id/edit_account_btn"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/account_value"
        android:layout_toLeftOf="@id/remove_account_btn"
        android:layout_toStartOf="@id/remove_account_btn"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
        android:drawableStart="@drawable/ic_mode_edit_black_24dp"/>

    <TextView
        android:id="@+id/account_value"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/edit_account_btn"
        android:layout_toStartOf="@id/edit_account_btn"
        android:gravity="center" />


</RelativeLayout>